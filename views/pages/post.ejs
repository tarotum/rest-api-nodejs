<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css"
/>
<script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>
<form
  action="http://localhost:3000/posts"
  method="POST"
  enctype="multipart/form-data"
>
  <p>
    <select name="type" id="post-type">
      <option value="graphic-post">Graphic</option>
      <option value="sound-post">Sound</option>
    </select>
  </p>
  <p>
    <input type="file" name="image" accept="image/*" />
  </p>
  <p>
    <input type="text" name="title" id="post-title" />
  </p>
  <p>
    <input type="text" name="category" id="post-category" />
  </p>
  <p>
    <select name="lang" id="post-lang">
      <option value="en">EN</option>
      <option value="ru">RU</option>
      <option value="ua">UA</option>
    </select>
  </p>
  <p>
    <textarea name="content" id="post-content" cols="30" rows="10"></textarea>
  </p>

  <button type="submit">Submit</button>
</form>
<script>
  var simplemde = new SimpleMDE({
    element: document.getElementById('post-content')
  });
</script>
